  "type": "project",
  "config": {
    "preferred-install": "source",
    "vendor-dir": "private/packages",
    "bin-dir": "bin"
  },
  "minimum-stability": "dev",
  "prefer-stable": false,
  "require": {
    "php": ">=5.4",
    "selenia/framework": "1.x-dev"
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "private/packages/selenia/framework/subsystems/*/composer.json",
        "private/modules/*/*/composer.json"
      ],
      "recurse": true,
      "replace": false,
      "merge-extra": true
    }
  },
  "autoload": {
    "files": [
      "private/bootstrap.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "Selenia\\CoreTasks::runInit"
    ],
    "post-update-cmd": [
    ],
    "post-create-project-cmd": []
