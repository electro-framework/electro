{
  "name": "electro/electro",
  "description": "The Electro PHP Web Framework",
  "keywords": [
    "framework"
  ],
  "license": "MIT",
  "homepage": "https://github.com/electro/electro",
  "authors": [
    {
      "name": "Impactwave",
      "email": "impactwave@impactwave.com",
      "homepage": "http://impactwave.com"
    },
    {
      "name": "ClÃ¡udio Silva",
      "email": "claudio.silva@impactwave.com"
    }
  ],
  "type": "project",
  "config": {
    "preferred-install": {
      "electro/*": "source",
      "electro-modules/*": "source",
      "selenia/*": "source",
      "selenia-modules/*": "source",
      "php-kit/*": "source",
      "*": "dist"
    },
    "vendor-dir": "private/packages",
    "bin-dir": "bin"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=5.6",
    "electro/framework": "dev-master"
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "private/app/composer.json",
        "private/packages/electro/framework/subsystems/*/composer.json",
        "private/modules/*/*/composer.json"
      ],
      "recurse": true,
      "replace": false,
      "merge-extra": true
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "private/App"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "App\\Init::runInitCommand"
    ],
    "post-install-cmd": [
      "App\\Init::runInitCommand"
    ],
    "post-update-cmd": [
      "App\\Init::runUpdateCommand"
    ],
    "pre-package-uninstall": [
      "App\\Init::runUninstallCommand"
    ]
  }
}
